<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

  <LinearLayout
      android:layout_margin="@dimen/_10sdp"
      android:background="@drawable/rounded_popup"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <ImageView
          android:id="@+id/edit_close"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_10sdp"
          android:src="@drawable/ic_baseline_close_24" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="@font/dosis_bold"
          android:text="@string/edit_profile"
          android:textColor="@color/text_color"
          android:textSize="@dimen/_18ssp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_120sdp"
          android:gravity="center"
          android:orientation="horizontal">

          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/img_edit_profile_dilaog"
              android:layout_width="@dimen/_100sdp"
              android:layout_height="@dimen/_100sdp"
              android:layout_gravity="center"
              android:layout_marginStart="@dimen/_80sdp"
              android:src="@drawable/img_no_image"
              app:civ_border_color="@color/putih"
              app:civ_border_width="1dp" />

          <Button
              android:id="@+id/btn_upload_foto_profile"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginStart="@dimen/_20sdp"
              android:layout_marginTop="@dimen/_5sdp"
              android:background="@drawable/rounded_btn"
              android:fontFamily="@font/dosis_bold"
              android:text="@string/ambil_foto"
              android:textColor="@color/putih" />
      </LinearLayout>

      <com.google.android.material.textfield.TextInputLayout
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="@dimen/_250sdp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/_20sdp"
          android:hint="@string/nama_lengkap"
          android:textColorHint="@color/abu">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/edit_fullname"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:drawableStart="@drawable/ic_baseline_person"
              android:drawablePadding="8dp"
              android:fontFamily="@font/dosis_semibold"
              android:inputType="text"
              android:textColor="@color/hitam" />

      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="@dimen/_250sdp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/_7sdp"
          android:hint="@string/alamat_lengkap"
          android:textColorHint="@color/abu">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/edit_alamat"
              android:layout_width="match_parent"
              android:layout_height="85dp"
              android:drawableStart="@drawable/ic_baseline_pin"
              android:drawablePadding="8dp"
              android:fontFamily="@font/dosis_semibold"
              android:inputType="textMultiLine"
              android:textColor="@color/hitam" />

      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="@dimen/_250sdp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/_7sdp"
          android:hint="@string/no_hp_telp"
          android:textColorHint="@color/abu">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/edit_nohp"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:drawableStart="@drawable/ic_baseline_call_24"
              android:drawablePadding="8dp"
              android:fontFamily="@font/dosis_semibold"
              android:inputType="number"
              android:textColor="@color/hitam" />

      </com.google.android.material.textfield.TextInputLayout>

      <com.github.ybq.android.spinkit.SpinKitView
          android:id="@+id/spinki_edit_profile"
          style="@style/SpinKitView.Large.ThreeBounce"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:visibility="gone" />

      <Button
          android:id="@+id/btn_simpan_edit"
          android:layout_width="@dimen/_250sdp"
          android:layout_height="@dimen/_36sdp"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/_20sdp"
          android:layout_marginBottom="@dimen/_30sdp"
          android:background="@drawable/rounded_btn"
          android:fontFamily="@font/dosis_extrabold"
          android:foreground="?android:attr/selectableItemBackground"
          android:text="@string/simpan"
          android:textColor="#FFF"
          android:textSize="@dimen/_13ssp" />
  </LinearLayout>
</LinearLayout>