<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.home.MainActivity">

    <FrameLayout
        android:layout_above="@id/animatedBottomBar"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/animatedBottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cnb_orientationMode="horizontal"
        android:padding="8dp"
        app:cnb_addBottomInset="true"
        app:cnb_textColor="@color/hitam"
        app:cnb_addLeftInset="true"
        app:cnb_addRightInset="true"
        android:elevation="16dp"
        app:cnb_menuResource="@menu/bottom_nav_menu"
        android:background="@color/putih"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>