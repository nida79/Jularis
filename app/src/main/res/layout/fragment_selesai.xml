<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.history.selesai.SelesaiFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />
    <TextView
        android:id="@+id/header_histori"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:fontFamily="@font/dosis_bold"
        android:gravity="center"
        android:text="@string/histori_transaksi"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_17ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/wadah_histori"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/header_histori">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_histori"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/oval_search"
            android:focusableInTouchMode="true"
            android:textAlignment="center"
            app:defaultQueryHint="Mau Cari Apa ?"
            app:queryBackground="@android:color/transparent"
            app:searchHintIcon="@drawable/ic_search" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_selesai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/oval_btn"
        android:fontFamily="@font/dosis_extrabold"
        android:text="@string/selesai"
        android:textColor="@color/putih"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toStartOf="@id/btn_belum_selesai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wadah_histori" />

    <Button
        android:id="@+id/btn_belum_selesai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/oval_btn"
        android:backgroundTint="@color/putih"
        android:fontFamily="@font/dosis_extrabold"
        android:text="@string/prosess"
        android:textColor="@color/abu_soft"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_selesai"
        app:layout_constraintTop_toBottomOf="@id/wadah_histori" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swp_histori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_selesai">

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>