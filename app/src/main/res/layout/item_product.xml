<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/id_home_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_220sdp"
    android:background="@color/putih"
    android:layout_margin="@dimen/_2sdp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/_2sdp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_card_product"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:background="#2d2d2d"
            android:contentDescription="@string/logo_app"
            android:scaleType="fitXY"
            android:src="@drawable/test" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/iv_card_product"
            android:id="@+id/tv_card_title"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:text="@string/sample_tittle"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_card_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_buy_home"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/sf_ui"
            android:text="@string/sample_rp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toTopOf="@id/btn_buy_home"
            app:layout_constraintEnd_toStartOf="@id/tv_item_sold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_title"
            app:layout_constraintVertical_bias="0.63" />

        <TextView
            android:id="@+id/tv_item_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/quattrocento_sans"
            android:text="Stok (231)"
            android:textColor="#696969"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintBottom_toTopOf="@id/btn_buy_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_card_title"
            app:layout_constraintVertical_bias="0.57" />
        <Button
            android:id="@+id/btn_buy_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_btn"
            android:elevation="5dp"
            android:fontFamily="@font/dosis_extrabold"
            android:text="@string/beli"
            android:textColor="@color/putih"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_card_title"
            app:layout_constraintVertical_bias="0.83" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>