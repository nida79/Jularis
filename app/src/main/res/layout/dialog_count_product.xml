<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:id="@+id/pop_up_wadah_detail"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_popup"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42000002">

        <ImageView
            android:id="@+id/pop_up_cancel_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_close_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pop_up_tv_result"
            android:layout_below="@id/pop_up_cancel_detail"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/masukkan_jumlah_barang"
            android:textColor="@color/abu"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/pop_up_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_toStartOf="@id/pop_up_tv_result"
            android:contentDescription="@string/logo_app"
            android:elevation="@dimen/_5sdp"
            android:src="@drawable/ic_remove_circle_24px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pop_up_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:contentDescription="@string/logo_app"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/_1"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_18ssp" />

        <ImageView
            android:id="@+id/pop_up_pls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_toEndOf="@id/pop_up_tv_result"
            android:contentDescription="@string/logo_app"
            android:elevation="@dimen/_15sdp"
            android:src="@drawable/ic_add_circle_24px" />

        <Button
            android:id="@+id/pop_up_submit"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/oval_btn"
            android:fontFamily="@font/dosis_extrabold"
            android:text="@string/submit"
            android:textColor="@color/putih"
            android:textSize="@dimen/_13ssp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>